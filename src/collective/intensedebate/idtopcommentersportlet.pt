<dl id="portlet-idtopcommenters"
	class="portlet portletIDTopCommentersPortlet"
    i18n:domain="collective.intensedebate"
    tal:define="account_id view/account_id;
                num view/num;">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
            <tal:title tal:replace="view/Title" />
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
    
        <script src="http://www.intensedebate.com/widgets/topCommenters/ID/NUM" 
                tal:attributes="src string:http://www.intensedebate.com/widgets/topCommenters/${view/account_id}/${num}"
                defer="defer" 
                type="text/javascript"></script>

    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>

