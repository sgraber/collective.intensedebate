<dl id="portlet-idlatestcomments"
	class="portlet portletIDLatestCommentsPortlet"
    i18n:domain="collective.intensedebate"
    tal:define="account_id view/account_id;
                num view/num;">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
            <tal:title tal:replace="view/Title" />
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
    
        <script type="text/javascript"
                src="http://www.intensedebate.com/widgets/acctComment/ID/NUM" 
                tal:attributes="src string:http://www.intensedebate.com/widgets/acctComment/${account_id}/${num}"
                defer="defer" ></script>

    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>

